<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="./bus-logo.ico">
    <link rel="stylesheet" href="./css/setup.css" />
    <link rel="stylesheet" href="./css/layout.css" />
    <title>UrbanLife - @ViewData["Title"]</title>
</head>
<body>
    <header>
        <nav class="main-nav">
            <span id="main-logo">UrbanLife</span>
            <ul>
                @if (ViewBag.User != null)
                {
                    <li class="nav-list-item">Welcome back, @ViewBag.User.FirstName</li>
                }
                <li class="nav-list-item">
                    <a class="nav-anchor" href="/">Home</a>
                </li>
                <li class="nav-list-item">
                    <a class="nav-anchor" href="#">Travel</a>
                </li>
                <li class="nav-list-item">
                    <a class="nav-anchor" href="#">Time table</a>
                </li>
                @if (ViewBag.User != null)
                {
                    <li class="nav-list-item">
                        <a class="nav-anchor" href="#">Subscriptions</a>
                    </li>
                }
                <li class="nav-list-item">
                    <div class="image-container">
                        @if (ViewBag.User != null)
                        {
                            <img class="profile-picture" src="./images/profile-pictures/custom-pictures/@ViewBag.ProfilePictureName" alt="Profile" />
                        }
                        else
                        {
                            <img class="profile-picture" src="./images/profile-pictures/guest.png" alt="Profile" />
                        }
                    </div>
                </li>
            </ul>
        </nav>
        <!--User profile html-->
        <aside id="profile-menu" style="display: none">
            <ul class="profile-menu-list">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="profile-menu-list-item">
                        <span class="profile-item">Guest</span>
                    </li>
                    <li class="profile-menu-list-item">
                        <a id="log-in-btn" class="nav-anchor profile-item" href="#">Log in</a>
                    </li>
                    <li class="profile-menu-list-item">
                        <a class="nav-anchor profile-item" href="#">Register</a>
                    </li>
                }
                else
                {
                    <li class="profile-menu-list-item">
                        <span class="profile-item">@ViewBag.User.FirstName @ViewBag.User.LastName</span>
                    </li>
                    <li class="profile-menu-list-item">
                        <a class="nav-anchor profile-item" href="#">
                            <i class="fa-solid fa-user"></i>
                            &ensp;Account
                        </a>
                    </li>
                    <li class="profile-menu-list-item">
                        <a class="nav-anchor profile-item" href="#">
                            <i class="fa-solid fa-ticket"></i>
                            &ensp;Purchases
                        </a>
                    </li>
                    <li class="profile-menu-list-item">
                        <a class="nav-anchor profile-item" href="#">
                            <i class="fa-solid fa-credit-card"></i>
                            &ensp;Payment methods
                        </a>
                    </li>
                    <li class="profile-menu-list-item">
                        <a id="log-out-btn" class="nav-anchor profile-item" href="#">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            &ensp;Log out
                        </a>
                    </li>
                }
            </ul>
        </aside>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <section id="footer-info">
            <div class="footer-info-card">
                <h3>Contacts</h3>
                <ul class="contacts-list">
                    <li>
                        <span>
                            <i class="fa-solid fa-phone-volume"></i>  +359 0000 00000
                        </span>
                    </li>
                    <li>
                        <span><i class="fa-solid fa-map-pin"></i>   Bulgaria, Sofia</span>
                    </li>
                    <li>
                        <span><i class="fa-solid fa-envelope"></i>   mocking.address@test.com</span>
                    </li>
                </ul>
            </div>
            <div class="footer-info-card">
                <h3>Our mission</h3>
                <p>
                    UrbanLife's mission is integration, digitalization and facilitation
                    of the urban transport system.
                </p>
            </div>
            <div class="footer-info-card">
                <h3>Content disclaimer</h3>
                <p>
                    The content and data used by this web project for users, lines,
                    stops, payment info, contacts, purchase info etc. are not real
                    and are for educational and graduation purpouses only!
                </p>
            </div>
        </section>
        <section id="footer-copyright">
            <p class="footer-copyright-item">&#169; 2023 UrbanLife AG Bulgaria, All rights reserved.</p>
            <p class="footer-copyright-item">Author - Boris Evtimov, Bulgaria, Sofia</p>
        </section>
    </footer>
    <script src="./js/profilePartialMenu.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>